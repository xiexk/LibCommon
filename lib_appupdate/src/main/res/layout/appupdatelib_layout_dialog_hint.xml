<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="272dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@drawable/appupdatelib_bg_dialog_hint"
    android:orientation="vertical">

    <TextView
        android:id="@+id/appupdatelib_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提示信息"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/appupdatelib_dialog_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:text="客服："
        android:textColor="#000000"
        android:textSize="13dp" />

    <CheckBox
        android:id="@+id/appupdatelib_dialoghint_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="始终下载"
        android:textSize="13dp"
        android:textColor="#000000"
        android:layout_marginTop="17dp"
        android:paddingLeft="9dp"
        android:checked="false"
        android:visibility="gone"
        style="@style/AppUpdateLibCustomCheckboxThemeSmall"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="14dp"
        android:background="#f3f3f3"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/appupdatelib_dialog_hint_cancer"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="#b08e5c"
        android:textSize="15dp"
        android:layout_weight="1"
        android:text="取消"
        android:visibility="gone"
        />
    <View
        android:id="@+id/appupdatelib_login_return_dialog_centerview"
        android:layout_width="1dp"
        android:layout_height="39dp"
        android:layout_gravity="center_vertical"
        android:background="#f3f3f3"
        android:visibility="gone"
        />
        <TextView
            android:id="@+id/appupdatelib_dialog_hint_ok"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#b08e5c"
            android:textSize="15dp"
            android:text="确定"
            android:layout_weight="1"
            />
</LinearLayout>

</LinearLayout>