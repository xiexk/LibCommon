<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_45"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/mainlib_layout_footer_common_ll_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mainlib_layout_footer_common_tv_left"
                style="@style/text_title"
                android:layout_marginLeft="@dimen/space_14"
                android:text="应付：139"
                android:textColor="@color/red"
                android:visibility="gone" />

            <CheckBox
                style="@style/checkbox_round_black"
                android:id="@+id/mainlib_layout_footer_common_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_14"
                android:paddingLeft="@dimen/space_5"
                android:text="全选"
                android:textColor="@color/gray_medium"

                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainlib_layout_footer_common_ll_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_10"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >


            <TextView
                android:id="@+id/mainlib_layout_footer_common_tv_center1"
                style="@style/text_title"
                android:text="合计："
                android:textColor="@color/gray_medium"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/mainlib_layout_footer_common_tv_center2"
                style="@style/text_title"
                android:text="$45"
                android:textColor="@color/red"
                android:visibility="gone"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainlib_layout_footer_common_ll_right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mainlib_layout_footer_common_bt_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/commonresourcelib_bt_red_conner0"
            android:text="去结算"
            android:textColor="@color/white"
            />


    </LinearLayout>

</LinearLayout>