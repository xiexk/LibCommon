<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    >


    <LinearLayout
        android:id="@+id/mainlib_layout_single_line_ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/space_44"
        android:paddingLeft="@dimen/space_20"
        android:paddingRight="@dimen/space_20"
        android:gravity="center_vertical"
        android:background="@drawable/commonresourcelib_bt_white_gray_null"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/mainlib_layout_single_line_ll_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mainlib_layout_single_line_iv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/commonresourcelib_search_black_24dp"
                android:visibility="gone"
                />

            <com.kun.common.widge.textview.TextViewIconFont
                android:id="@+id/mainlib_layout_single_line_tv_left"
                style="@style/text_title"
                android:paddingBottom="@dimen/space_2"
                android:paddingTop="@dimen/space_2"
                android:text="我是标题" />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainlib_layout_single_line_ll_center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mainlib_layout_single_line_iv_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/commonresourcelib_search_black_24dp"
                android:visibility="gone"
                />

            <com.kun.common.widge.textview.TextViewIconFont
                android:id="@+id/mainlib_layout_single_line_tv_center"
                style="@style/text_content"
                android:paddingBottom="@dimen/space_2"
                android:paddingTop="@dimen/space_2"
                android:text=""
                android:visibility="gone"
                />

            <EditText
                android:id="@+id/mainlib_layout_single_line_et_center"
                style="@style/edittext"
                android:visibility="gone"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainlib_layout_single_line_ll_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mainlib_layout_single_line_iv_right_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/commonresourcelib_search_black_24dp"
                android:visibility="gone"
                />

            <com.kun.common.widge.textview.TextViewIconFont
                android:id="@+id/mainlib_layout_single_line_tv_right"
                style="@style/text_title"
                android:text="我是标题"
                android:visibility="gone"
                android:paddingBottom="@dimen/space_2"
                android:paddingTop="@dimen/space_2"
                />

            <ImageView
                android:id="@+id/mainlib_layout_single_line_iv_right_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/commonresourcelib_search_black_24dp"
                android:visibility="gone"
                />
          <Button
              android:id="@+id/mainlib_layout_single_line_bt_tight"
              style="@style/button_small"
              android:layout_height="@dimen/space_25"
              android:layout_width="@dimen/space_50"
              android:text="抵消"
              android:background="@drawable/commonresourcelib_bt_yellow_conner6"
              android:visibility="gone"
              />

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/mainlib_layout_single_line_view_line"
        style="@style/line" />
</LinearLayout>